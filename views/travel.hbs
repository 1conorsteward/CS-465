<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Travlr Getaways | Travel</title>
    <link rel="stylesheet" href="/css/styles.css">
</head>
<body data-logged-in="{{isLoggedIn}}">
    {{> header}}

    <!-- Login/Registration Modals -->
    {{> loginModal}}
    {{> registrationModal}} 

    <main>
        <!-- Tabs, Search Bar, and Add Trip Button -->
        <div class="controls-container">
            <div class="tabs">
                <button class="tab-button" data-type="beach">Beaches</button>
                <button class="tab-button" data-type="cruise">Cruises</button>
                <button class="tab-button" data-type="mountain">Mountains</button>
            </div>
            <div class="search-add-container">
                <input type="text" id="search-bar" placeholder="Search by destination">
                {{#if isLoggedIn}}
                    <button id="add-trip-button" class="add-trip-button">Add a Trip</button>
                {{/if}}
            </div>
        </div>

        <div class="travel-list">
            <table>
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Name</th>
                        <th>Length</th>
                        <th>Start</th>
                        <th>Resort</th>
                        <th>Per Person</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody id="trip-rows">
                    {{#each trips}}
                        <tr>
                            <td>{{_id}}</td>
                            <td>{{destination}}</td>
                            <td>{{lengthOfStay.nights}} nights / {{lengthOfStay.days}} days</td>
                            <td>{{startDate}}</td>
                            <td>{{resort}}</td>
                            <td>${{pricePerPerson}}</td>
                            <td class="action-buttons">
                                {{#if ../isLoggedIn}}
                                    <button class="edit-trip-btn" data-trip-id="{{_id}}">Edit</button>
                                    <button class="delete-trip-btn" data-trip-id="{{_id}}">Delete</button>
                                {{/if}}
                            </td>
                        </tr>
                    {{/each}}
                </tbody>
            </table>

            <div class="pagination">
                <a href="#">previous</a> | 
                <a href="#">next</a>
            </div>
        </div>
    </main>

    <!-- Add Trip Modal (Shown only when the Add Trip button is clicked) -->
    <div id="add-trip-modal" style="display:none;">
        <h2>Add New Trip</h2>
        <form id="add-trip-form">
            <label for="destination">Destination:</label>
            <input type="text" id="destination" required>
            <label for="nights">Nights:</label>
            <input type="number" id="nights" required>
            <label for="days">Days:</label>
            <input type="number" id="days" required>
            <label for="startDate">Start Date:</label>
            <input type="date" id="startDate" required>
            <label for="resort">Resort:</label>
            <input type="text" id="resort" required>
            <label for="pricePerPerson">Price Per Person:</label>
            <input type="number" id="pricePerPerson" required>
            <label for="type">Type:</label>
            <select id="type" required>
                <option value="beach">Beach</option>
                <option value="cruise">Cruise</option>
                <option value="mountain">Mountain</option>
            </select>
            <button type="submit">Add Trip</button>
        </form>
    </div>

    {{> footer}}

    <!-- Scripts -->
    <script src="/js/main.js"></script>
    <script src="/js/auth.js"></script>
</body>
</html>
